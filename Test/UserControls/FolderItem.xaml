<UserControl x:Class="Bookmarks.UserControls.FolderItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bookmarks.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="500" FontSize="24" Margin="20,5,20,5">
    
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/> 
            </Grid.RowDefinitions>
        <Border Background="#333333" MouseLeftButtonDown="Border_MouseLeftButtonDown" Cursor="Hand">
            <Grid Margin="5" Grid.Row="0">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Name="DownButton" Width="30" Height="30" Background="#333333" BorderBrush="#333333" Click="DownButton_Click" >
                    <Image Name="DownImage" Source="/Images/down_arrow.png" Width="25" Height="25" />
                </Button>
                <TextBlock Name="FolderText" Grid.Column="1" Margin="5,0,5,0" Cursor="" VerticalAlignment="Stretch" TextTrimming="CharacterEllipsis" TextAlignment="Center" Padding="10,15,10,15" />
                <Button Grid.Column="2" Name="EditButton" Width="25" Height="25" Background="#3fc88a" Click="EditButton_Click">
                    <Image Source="/Images/edit_pen.png"></Image>
                </Button>
            
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto">

                <StackPanel Name="FoldersStack" />

            </ScrollViewer>
        </Grid>

</UserControl>
